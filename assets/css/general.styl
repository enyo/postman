
@import "nib"

@import "foundation.css"


header
  h1
    border-bottom 1px solid #aaa
  margin-bottom 30px



.row
  width 1440px

#main
  margin-bottom 150px

  #request-name
    margin-top 0
  .request-name
    input
      font-weight bold

  #request-links
    .tabs-content
      li
        max-height 460px
        overflow auto
        a
          display block
          line-height 150%
          overflow ellipsis

  #request
    .url
      h3
        overflow ellipsis
    .body
      font-family monospace
      font-size 12px
      font-size 11px
      white-space pre
      background #fafafa
      padding 10px 
      overflow auto


    .error
      color red

  #loading
    display none
    position fixed
    top 0
    bottom 0
    left 0
    right 0
    background rgba(255, 255, 255, 0.6)
    z-index 1000
    &.visible
      display block
    span
      font-weight bold
      display block
      position absolute
      width 200px
      height 50px
      line-height @height
      margin-left -(@width / 2)
      margin-top -(@height / 2)
      left 50%
      top 50%
      font-size 40px
      color rgba(0, 0, 0, 0.8)
      text-align center

  textarea
    min-height 200px


footer
  .version
    display block
    fixed bottom 10px right 10px
    color #555
    font-size 0.8em
    background rgba(255, 255, 255, 0.7)