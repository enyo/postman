extends layout

block main
  h1 Postman

  if typeof request != "undefined"
    script(type="text/javascript")
      window.request = !{JSON.stringify(request)};


  form(action="/post", method="post", data-fw="true")
    .row
      .one.columns
        label Protocol
        input(type="text", name="request[protocol]")
      .two.columns
        label Hostname
        input(type="text", name="request[hostname]")
      .one.columns
        label Port
        input(type="text", name="request[port]")
      .two.columns
        label Timeout
        .row.collapse
          .nine.columns
            input(type="text", name="request[timeout]")
          .three.columns
            span.postfix s
      .one.columns.end
        label Method
        select(name="request[method]")
          - var options = [ "POST", "GET", "PUT", "DELETE", "OPTIONS" ]
          each option in options
            option(value=option)= option
    .row
      .six.columns
        label Pathname
        input(type="text", name="request[pathname]")
        label Query
        .row.collapse
          .one.columns
            span.prefix ?
          .eleven.columns
            input(type="text", name="request[search]")
        textarea(name="request[body]")= request.body
      .six.columns
        .row
          .six.columns
            label Header name
          .six.columns
            label Header value
        - if (!request.headerName) request.headerName = [ ]
        - if (!request.headerValue) request.headerValue = [ ]
        - for i in [0,1,2,3,4,5,6]
          .row
            .six.columns
              input(type="text", name="request[headers][#{i}][name]")
            .six.columns
              input(type="text", name="request[headers][#{i}][value]")

    button(type="submit").large.success.button POST!

  
  #requests


